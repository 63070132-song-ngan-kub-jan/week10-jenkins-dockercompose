pipeline {
  agent any
  stages {
    stage('Git initialize') {
      steps {
        echo 'Pull git repository...'
        sh 'git pull origin main'
      }
    }
    stage('Docker build images') {
      steps {
        dir('week10-jenkins-dockercompose') {
          echo 'Start building Docker images...'
          sh 'docker-compose down --rmi all'
          sh 'docker-compose build'
        }
      }
    }
    stage('Docker push images to DockerHub') {
      steps {
        dir('week10-jenkins-dockercompose') {
          echo 'Pushing Docker images...'
          sh 'docker tag week10-jenkins-dockercompose_frontend:latest panupongkeawkam/week10-jenkins-dockercompose-frontend'
          sh 'docker tag week10-jenkins-dockercompose_backend:latest panupongkeawkam/week10-jenkins-dockercompose-backend'
        }
      }
    }
  }
}